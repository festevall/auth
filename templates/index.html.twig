{% extends "layout.html.twig" %}

{% block content %}
    <div class="form">

        <form action="{{ path('login') }}" method="POST">
            <input type="text" name="_login" placeholder="Login" required /><br>
            <input type="password" name="_password" placeholder="Password" required /><br>
            <div class="errors">
                {% for alert in app.session.flashbag.get('login_error') %}
                    <p class="error-text">{{ alert }}</p>
                {% endfor %}
            </div>
            <a href="{{ path('registration') }}">Registration </a> | <button>Login</button>
        </form>

    </div>
{% endblock %}
